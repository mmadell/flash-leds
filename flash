digitalWrite(lr, HIGH);
digitalWrite(lg, HIGH); 
digitalWrite(lb, HIGH); 
digitalWrite(ly, HIGH); 
digitalWrite(lo, HIGH); 
digitalWrite(lp, HIGH); 
digitalWrite(lpi, HIGH); 
digitalWrite(ls, HIGH); 
delay(500);

digitalWrite(lr, LOW);
digitalWrite(lg, LOW); 
digitalWrite(lb, HIGH); 
digitalWrite(ly, HIGH); 
digitalWrite(lo, HIGH); 
digitalWrite(lp, HIGH); 
digitalWrite(lpi, HIGH); 
digitalWrite(ls, HIGH); 
delay(500); 

digitalWrite(lr, LOW);
digitalWrite(lg, LOW); 
digitalWrite(lb, LOW); 
digitalWrite(ly, LOW); 
digitalWrite(lo, HIGH); 
digitalWrite(lp, HIGH); 
digitalWrite(lpi, HIGH); 
digitalWrite(ls, HIGH); 
delay(500); 

digitalWrite(lr, LOW);
digitalWrite(lg, LOW); 
digitalWrite(lb, LOW); 
digitalWrite(ly, LOW); 
digitalWrite(lo, LOW); 
digitalWrite(lp, LOW); 
digitalWrite(lpi, HIGH); 
digitalWrite(ls, HIGH); 
delay(500); 

digitalWrite(lr, LOW);
digitalWrite(lg, LOW); 
digitalWrite(lb, LOW); 
digitalWrite(ly, LOW); 
digitalWrite(lo, LOW); 
digitalWrite(lp, LOW); 
digitalWrite(lpi, LOW); 
