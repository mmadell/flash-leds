//yellwo
digitalWrite(lr, LOW);
digitalWrite(lg, LOW); 
digitalWrite(lb, LOW); 
digitalWrite(ly, HIGH); 
digitalWrite(lo, LOW); 
digitalWrite(lp, LOW); 
digitalWrite(lpi, LOW); 
digitalWrite(ls, LOW); 
