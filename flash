//pink
digitalWrite(lr, LOW);
digitalWrite(lg, LOW); 
digitalWrite(lb, LOW); 
digitalWrite(ly, LOW); 
digitalWrite(lo, LOW); 
digitalWrite(lp, LOW); 
digitalWrite(lpi, HIGH); 
digitalWrite(ls, LOW); 
delay(500); 
//sky
digitalWrite(lr, LOW);
digitalWrite(lg, LOW); 
digitalWrite(lb, LOW); 
digitalWrite(ly, LOW); 
digitalWrite(lo, LOW); 
digitalWrite(lp, LOW); 
digitalWrite(lpi, LOW); 
digitalWrite(ls, HIGH); 
delay(1000); 
// convconverging
digitalWrite(lr, HIGH);
digitalWrite(lg, LOW); 
digitalWrite(lb, LOW); 
digitalWrite(ly, LOW); 
digitalWrite(lo, LOW); 
digitalWrite(lp, LOW); 
digitalWrite(lpi, LOW); 
digitalWrite(ls, HIGH); 
delay(500);

digitalWrite(lr, LOW);
digitalWrite(lg, HIGH); 
digitalWrite(lb, LOW); 
digitalWrite(ly, LOW); 
digitalWrite(lo, LOW); 
digitalWrite(lp, LOW); 
digitalWrite(lpi, HIGH); 
digitalWrite(ls, LOW); 
delay(500);

digitalWrite(lr, LOW);
digitalWrite(lg, LOW); 
digitalWrite(lb, HIGH); 
digitalWrite(ly, LOW); 
digitalWrite(lo, LOW); 
digitalWrite(lp, HIGH); 
digitalWrite(lpi, LOW); 
digitalWrite(ls, LOW); 
delay(500);

digitalWrite(lr, LOW);
digitalWrite(lg, LOW); 
digitalWrite(lb, LOW); 
digitalWrite(ly, HIGH); 
digitalWrite(lo, HIGH); 
digitalWrite(lp, LOW); 
digitalWrite(lpi, LOW); 
digitalWrite(ls, LOW); 
delay(1000);
//diverging
digitalWrite(lr, LOW);
digitalWrite(lg, LOW); 
digitalWrite(lb, HIGH); 
digitalWrite(ly, LOW); 
digitalWrite(lo, LOW); 
digitalWrite(lp, HIGH); 
digitalWrite(lpi, LOW); 
digitalWrite(ls, LOW); 
delay(500);

digitalWrite(lr, LOW);
digitalWrite(lg, HIGH); 
digitalWrite(lb, LOW); 
digitalWrite(ly, LOW); 
digitalWrite(lo, LOW); 
digitalWrite(lp, LOW); 
digitalWrite(lpi, HIGH); 
digitalWrite(ls, LOW); 
delay(500);  

digitalWrite(lr, HIGH);
digitalWrite(lg, LOW); 
digitalWrite(lb, LOW); 
digitalWrite(ly, LOW); 
digitalWrite(lo, LOW); 
digitalWrite(lp, LOW); 
digitalWrite(lpi, LOW); 
digitalWrite(ls, HIGH); 
delay(1000); 
//pin pong 
digitalWrite(lr, HIGH);
digitalWrite(lg, LOW); 
digitalWrite(lb, HIGH); 
digitalWrite(ly, LOW); 
digitalWrite(lo, HIGH); 
digitalWrite(lp, LOW); 
digitalWrite(lpi, HIGH); 
digitalWrite(ls, LOW); 
delay(500);  

digitalWrite(lr, LOW);
digitalWrite(lg, HIGH); 
digitalWrite(lb, LOW); 
digitalWrite(ly, HIGH); 
digitalWrite(lo, LOW); 
digitalWrite(lp, HIGH); 
digitalWrite(lpi, LOW); 
digitalWrite(ls, HIGH); 
delay(500); 

digitalWrite(lr, HIGH);
digitalWrite(lg, LOW); 
