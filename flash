//orange
digitalWrite(lr, LOW);
digitalWrite(lg, LOW); 
digitalWrite(lb, LOW); 
digitalWrite(ly, LOW); 
digitalWrite(lo, HIGH); 
digitalWrite(lp, LOW); 
digitalWrite(lpi, LOW); 
digitalWrite(ls, LOW); 
delay(500); 
//perpel
digitalWrite(lr, LOW);
digitalWrite(lg, LOW); 
digitalWrite(lb, LOW); 
digitalWrite(ly, LOW); 
digitalWrite(lo, LOW); 
digitalWrite(lp, HIGH); 
digitalWrite(lpi, LOW); 
digitalWrite(ls, LOW); 
